---
export interface Props { title?: string }
const { title } = Astro.props as Props;
---
<article class="p-5 rounded-lg border border-gray-200 bg-white shadow-sm">
  {title && <h3 class="font-semibold mb-2 text-lg">{title}</h3>}
  <div class="prose prose-sm max-w-none">
    <slot />
  </div>
</article>
