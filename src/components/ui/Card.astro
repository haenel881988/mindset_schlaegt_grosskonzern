---
// src/components/ui/Card.astro
interface Props {
  title: string;
}
const { title } = Astro.props as Props;
---
<div class="bg-secondary border border-border-default rounded-xl p-8 shadow-lg/0 hover:shadow-2xl hover:shadow-blue-500/10 transition-transform duration-200">
  <h3 class="text-xl md:text-2xl font-bold text-text-primary mb-3">{title}</h3>
  <div class="text-text-secondary leading-relaxed">
    <slot />
  </div>
</div>
