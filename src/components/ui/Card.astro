---
export interface Props { title?: string }
const { title } = Astro.props as Props;
---
<div class="card-base">
  {title && <h3 class="text-xl md:text-2xl font-bold text-text-on-surface mb-3">{title}</h3>}
  <div class="text-text-on-surface-secondary leading-relaxed">
    <slot />
  </div>
</div>
