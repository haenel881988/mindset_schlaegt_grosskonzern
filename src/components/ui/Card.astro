---
export interface Props { title?: string }
const { title } = Astro.props as Props;
---
<div class="group relative p-8 rounded-xl bg-surface text-on-surface border border-border-surface overflow-hidden">
  <div class="absolute inset-0 pointer-events-none bg-gradient-to-r from-transparent via-accent/5 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000 ease-in-out" aria-hidden="true"></div>
  <div class="relative z-10">
    {title && <h3 class="font-semibold mb-4 text-xl">{title}</h3>}
    <div class="text-base">
      <slot />
    </div>
  </div>
</div>
