---
export interface Props { title?: string }
const { title } = Astro.props as Props;
---
<div class="group relative p-8 rounded-xl bg-background-secondary border border-border-default overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-accent/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000 ease-in-out" aria-hidden="true"></div>
  <div class="relative z-10">
    {title && <h3 class="font-semibold mb-4 text-xl text-text-primary">{title}</h3>}
    <div class="text-base text-text-secondary">
      <slot />
    </div>
  </div>
</div>
