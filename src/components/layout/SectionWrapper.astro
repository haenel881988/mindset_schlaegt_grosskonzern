---
// src/components/layout/SectionWrapper.astro
interface Props {
  variant?: 'hero' | 'light' | 'proof' | 'story' | 'accent';
}
const { variant } = Astro.props as Props;

const bgClasses: Record<string,string> = {
  hero: 'bg-primary',
  light: 'bg-primary',
  proof: 'bg-primary',
  story: 'bg-primary',
  // Option A (dezente Hervorhebung): Border-Akzent (bestehend)
  // accent: 'bg-primary border-t border-b border-border-default/50',
  // Option B (starke Hervorhebung): echte Akzent-Sektion
  accent: 'bg-accent text-white',
  default: 'bg-primary',
};

const bgColor = bgClasses[variant || 'default'] || bgClasses.default;

// Das 2-Spalten-Layout (dein Wunsch) wird NUR auf 'hero' angewendet
const isHero = variant === 'hero';
---
<section class:list={[bgColor, `variant-${variant || 'default'}`, "py-20 sm:py-28 overflow-hidden"]}>
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    {isHero ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <slot /> </div>
    ) : (
      <slot /> )}
  </div>
</section>
