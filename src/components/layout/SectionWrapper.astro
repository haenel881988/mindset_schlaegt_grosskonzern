---
// src/components/layout/SectionWrapper.astro
interface Props {
  variant?: 'hero' | 'light' | 'proof' | 'story' | 'accent';
}
const { variant } = Astro.props as Props;

const bgClasses: Record<string,string> = {
  hero: 'bg-black',
  light: 'bg-black',
  proof: 'bg-black',
  story: 'bg-black',
  accent: 'bg-black border-t border-b border-brand-dark/50',
  default: 'bg-black',
};

const bgColor = bgClasses[variant || 'default'] || bgClasses.default;

// Das 2-Spalten-Layout (dein Wunsch) wird NUR auf 'hero' angewendet
const isHero = variant === 'hero';
---
<section class:list={[bgColor, `variant-${variant || 'default'}`, "py-20 sm:py-24 overflow-hidden"]}>
  <div class="max-w-4xl mx-auto px-6 lg:px-8">
    {isHero ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <slot /> </div>
    ) : (
      <slot /> )}
  </div>
</section>
