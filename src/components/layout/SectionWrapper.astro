---
// src/components/layout/SectionWrapper.astro
interface Props {
  variant?: 'hero' | 'light' | 'accent' | 'dark';
}
const { variant } = Astro.props as Props;

const variantClasses: Record<string, string> = {
  hero: 'py-16 md:py-24',
  light: 'py-20 md:py-28 bg-background-secondary',
  dark: 'py-20 md:py-28 bg-background-primary',
  accent: 'py-20 md:py-28 bg-accent text-white',
};

const isHero = variant === 'hero';
---
<section class:list={[variantClasses[variant || 'dark'] || variantClasses.dark, `variant-${variant || 'dark'}`, "overflow-hidden"]}>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 space-y-8">
    {isHero ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <slot /> </div>
    ) : (
      <slot /> )}
  </div>
</section>
