---
// src/components/layout/SectionWrapper.astro
interface Props {
  variant?: 'hero' | 'content' | 'proof' | 'story' | 'minimal' | 'accent';
}
const { variant } = Astro.props as Props;

const rhythm: Record<string, string> = {
  hero: 'py-16 md:py-24',
  content: 'py-20 md:py-28',
  proof: 'py-20 md:py-28',
  story: 'py-20 md:py-28',
  minimal: 'py-12 md:py-16',
  accent: 'py-20 md:py-28',
};

const isHero = variant === 'hero';
---
<section class:list={[`bg-background-primary text-text-primary overflow-hidden`, rhythm[variant || 'content'] || rhythm.content, `variant-${variant || 'content'}`]}>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 space-y-8">
    {isHero ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <slot /> </div>
    ) : (
      <slot /> )}
  </div>
</section>
