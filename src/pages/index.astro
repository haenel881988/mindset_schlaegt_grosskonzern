---
// src/pages/index.astro - Router für MDX Startseite
import MainLayout from '../layouts/MainLayout.astro';
import IndexContent from '../content/pages/index.mdx';

// Frontmatter aus der MDX Datei (robust mit Fallbacks)
const fm = (IndexContent as any)?.frontmatter ?? {};
const pageTitle: string = fm.title ?? 'Mindset schlägt Grosskonzern';
const pageDescription: string = fm.metaDescription ?? fm.description ?? 'Wenn Konzerne, Versicherer oder Behörden dich zermürben, ist das kein Zufall. Hier lernst du, strategisch zurückzuschlagen.';
---
<MainLayout title={pageTitle} description={pageDescription}>
  <IndexContent />
</MainLayout>
