---
import MainLayout from '../layouts/MainLayout.astro';
import SectionWrapper from '../components/layout/SectionWrapper.astro';

const title = 'Seite nicht gefunden – 404';
const description = 'Die angeforderte Seite wurde nicht gefunden. Zurück zur Startseite.';
---
<MainLayout title={title} description={description}>
  <SectionWrapper variant="light">
    <h1 class="text-3xl md:text-4xl font-bold mb-4">Seite nicht gefunden</h1>
    <p class="text-gray-300 mb-6">Die angeforderte Adresse existiert nicht oder wurde verschoben.</p>
    <a href="/" class="inline-block rounded-lg bg-brand-orange px-5 py-3 font-semibold text-white shadow hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-orange">Zur Startseite</a>
  </SectionWrapper>
  
</MainLayout>
